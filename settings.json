{
  "breadcrumbs.enabled": false,
  "explorer.compactFolders": false,

  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",

  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": false,
  "editor.fontSize": 17,
  "editor.fontWeight": "normal",

  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontSize": 16,

  "workbench.colorTheme": "Noctis",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {},
  "workbench.editor.tabSizing": "fit",
  "workbench.startupEditor": "none",
  "window.zoomLevel": 1,

  "typescript.updateImportsOnFileMove.enabled": "always",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.semi": false,

  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,
  "importCost.bundleSizeDecoration": "minified",
  "importCost.javascriptExtensions": ["\\.jsx?$"],
  "importCost.showCalculatingDecoration": false,
  "importCost.typescriptExtensions": ["\\.tsx?$"],
  "javascript.updateImportsOnFileMove.enabled": "always",

  "material-icon-theme.folders.associations": {
    "user": "admin",
    "entities": "database"
  },

  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,

  "editor.guides.bracketPairs": "active",
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.indentation": true,
  "editor.autoIndent": "advanced"
}
